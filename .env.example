# .env.example - Environment Variables for DIVE25 Deployment

# Database and Service Credentials
WP_DB_PASSWORD=your_wp_db_password_here
MYSQL_ROOT_PASSWORD=your_mysql_root_password_here
MONGO_ROOT_USER=dive25mongo  # Defaults to 'dive25mongo' if not set
MONGO_ROOT_PASSWORD=your_mongo_root_password_here
MONGO_URI=mongodb://localhost:27017/dive25  # Update as necessary

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password_here

# Ping Identity Configuration
# These variables are required for configuring Ping Identity services.
PING_IDENTITY_DEVOPS_USER=your_ping_identity_devops_user
PING_IDENTITY_DEVOPS_KEY=your_ping_identity_devops_key
PING_IDENTITY_PASSWORD=your_ping_identity_password_here  # Used by PingAccess
PA_ADMIN_PASSWORD_INITIAL=your_pa_admin_password_here  # Initial admin password for PingAccess

# Server Profile Configuration
SERVER_PROFILE_URL=http://serverprofile.example.com

# Application Environment Settings
NODE_ENV=development
PORT=8080