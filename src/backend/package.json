{
  "name": "backend",
  "version": "1.0.0",
  "description": "DIVE25 NATO Document System Backend",
  "main": "dist/app.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc -p tsconfig.json",
    "build:dev": "npm run build -- --sourceMap",
    "build:prod": "tsc -p tsconfig.prod.json",
    "dev": "ts-node src/app.ts",
    "start": "node dist/app.js",
    "start:prod": "NODE_ENV=production node dist/app.js",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "cache:clear": "rm -rf node_modules/.cache",
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn')===-1)process.exit(1)\" || echo \"Please use npm instead of yarn\""
  },
  "dependencies": {
    "@open-policy-agent/opa-wasm": "^1.10.0",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-jwt": "^8.5.1",
    "express-rate-limit": "latest",
    "helmet": "^8.0.0",
    "ioredis": "^5.3.2",
    "ldapjs": "^3.0.7",
    "mongodb": "^6.13.0",
    "multer": "^1.4.5-lts.1",
    "prom-client": "^15.1.0",
    "winston": "^3.17.0",
    "winston-mongodb": "^6.0.0",
    "xml-crypto": "^3.2.0",
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.2",
    "@types/xmldom": "^0.1.34",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}